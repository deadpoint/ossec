  <syscheck>
<% if @frequency -%>
    <frequency><%= @frequency %></frequency>
<% end -%>
<% if @scan_time -%>
    <scan_time><%= @scan_time %></scan_time>
<% end -%>
<% if @scan_day -%>
    <scan_day><%= @scan_day %></scan_day>
<% end -%>
<% if @auto_ignore -%>
    <auto_ignore><%= @auto_ignore %></auto_ignore>
<% end -%>
<% if @alert_new_files -%>
    <alert_new_files><%= @alert_new_files %></alert_new_files>
<% end -%>
<% if @scan_on_start -%>
    <scan_on_start><%= @scan_on_start %></scan_on_start>
<% end -%>
<% if @windows_registry -%>
    <windows_registry><%= @windows_registry %></windows_registry>
<% end -%>
<% if @registry_ignore -%>
    <registry_ignore><%= @registry_ignore %></registry_ignore>
<% end -%>
<% if @refilter_cmd -%>
    <srefilter_cmd><%= @refilter_cmd %></refilter_cmd>
<% end -%>

    <ignore>/etc/mtab</ignore>
    <ignore>/etc/hosts.deny</ignore>
    <ignore>/etc/mail/statistics</ignore>
    <ignore>/etc/random-seed</ignore>
    <ignore>/etc/adjtime</ignore>
<% if @ignore -%>
<% if @ignore.is_a?(Array) -%>
<% @ignore.each do |ii| -%>
    <ignore><%= ii %></ignore>
<% end -%>
<% else %>
    <ignore><%= @ignore %></ignore>
<% end -%>
<% end -%>

    <directories check_all="yes">/etc,/usr/bin,/usr/sbin</directories>
    <directories check_all="yes">/bin,/sbin</directories>
<% if @directories -%>
<% if @directories.is_a?(Array) -%>
<% @directories.each do |ii| -%>
    <directories check_all="yes"><%= ii %></directories>
<% end -%>
<% else %>
    <directories check_all="yes"><%= @directories %></directories>
<% end -%>
<% end -%>

  </syscheck>

